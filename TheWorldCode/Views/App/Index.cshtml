@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
    <header>
        <title>The World - @ViewBag.Title</title>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="~/css/site.css"/>
    </header>
    <body>
        <div id="sidebar">
            <img  src="~/img/profile.jpg" alt="profile" class="profile-pic"/>
            <span id="username">Eirik Ulvik</span> 
            <ul class="menu">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
            </ul> 
        </div>
        <div id="wrapper">
            <div id="main">
                <div>
                    <button id="sidebarToggle">Toggle Menu</button>
                </div>
                <h2>The World</h2>
                <p>This will soon be a nice web site!</p>
                
                <form>
                    <div>
                        <label>Date</label>
                        <input />
                    </div>
                    <div>
                        <label>Location</label>
                        <input />
                    </div>
                    <div>
                        <input type="submit" value="Add"/>
                    </div>
                    
                </form>
            </div>
            <div id="footer">
                &copy; 2015 The World Ltd
            </div>
            <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
            <script type="text/javascript" src="~/js/site.js"></script>
        </div>
    </body>
</html>