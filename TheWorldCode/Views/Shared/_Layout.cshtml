<!DOCTYPE html>
<html lang="en">
    <header>
        <title>The World - @ViewBag.Title</title>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css"/>
        <link rel="stylesheet" href="~/css/site.css"/>
    </header>
    <body>
        <div id="sidebar">
            <img  src="~/img/profile.jpg" alt="profile" class="profile-pic"/>
            <span id="username">Eirik Ulvik</span> 
            <ul class="menu">
                <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="About">About</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
            </ul> 
        </div>
        <div id="wrapper">
            <div id="main">
                <div>
                    <button id="sidebarToggle" class="btn btn-primary">
                        <i class="fa fa-angle-left"></i>
                    </button>
                </div>
                
                <div>
                    @RenderBody()
                </div>
            </div>
            <div id="footer">
                <p class="text-primary">&copy; 2015 The World Ltd</p>
            </div>
            <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
            <script type="text/javascript" src="~/lib/bootsrap/dist/js/bootstrap.min.js"></script>
            <script type="text/javascript" src="~/js/site.js"></script>
            
            @RenderSection("Scripts", false)
        </div>
    </body>
</html>